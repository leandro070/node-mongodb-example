{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": ".",
        "strict": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "strictNullChecks":false
    },
    "include": [
        "src/**/**.ts"
    ],
    "exclude": ["node_modules", "tests"]
}