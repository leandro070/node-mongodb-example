{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "./dist",
        "typeRoots": ["node_modules/@types"],
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": ["node_modules", "tests"]
}