{
  "name": "nodetest",
  "version": "1.0.0",
  "description": "Node test",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run lint && npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.json",
    "build:clean": "rm -r dist; exit 0",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tslint src/**/*.{js,ts}",
    "serve": "node dist/src/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "start": "npm run serve",
    "start:dev": "ts-node-dev --ignore-watch node_modules ./src/index.ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "author": "Leandro Gutierrez",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "5.0.0",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "mongodb": "^3.6.3",
    "morgan": "1.10.0",
    "node-dependency-injection": "^2.6.8",
    "yargs": "^16.2.0",
    "yup": "^0.32.8",
    "yup-to-object": "^1.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.166",
    "@types/mongodb": "^3.6.3",
    "@types/morgan": "^1.9.2",
    "@types/yargs": "^15.0.12",
    "@types/yup": "^0.29.11",
    "concurrently": "5.3.0",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "tslint": "6.1.3",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": "14.15.3"
  }
}
